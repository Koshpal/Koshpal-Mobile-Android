<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow -->
    <item android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners
                android:topLeftRadius="24dp"
                android:topRightRadius="24dp" />
        </shape>
    </item>
    
    <!-- Main background with true curved notch -->
    <item android:top="4dp">
        <vector 
            android:width="360dp" 
            android:height="80dp" 
            android:viewportWidth="360" 
            android:viewportHeight="80">
            
            <!-- Background with deep curved notch -->
            <path android:fillColor="@color/white"
                android:pathData="M24,0 
                L140,0 
                C150,0 155,5 160,15 
                C165,25 170,30 180,30 
                C190,30 195,25 200,15 
                C205,5 210,0 220,0 
                L336,0 
                C352,0 360,8 360,24 
                L360,80 
                L0,80 
                L0,24 
                C0,8 8,0 24,0 
                Z" />
                
            <!-- Create the actual notch by subtracting a circle -->
            <path android:fillColor="@color/background_light"
                android:pathData="M180,30 
                C195,30 210,15 210,0 
                C210,-15 195,-30 180,-30 
                C165,-30 150,-15 150,0 
                C150,15 165,30 180,30 
                Z" />
        </vector>
    </item>
    
</layer-list>
