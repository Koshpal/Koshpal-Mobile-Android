<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="120dp"
    android:layout_marginEnd="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

        <FrameLayout
        android:id="@+id/cardContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bank_card">

            <!-- Financial texture overlay - fixed size to prevent layout influence -->
            <ImageView
                android:id="@+id/ivFinancialTexture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="fill"
                android:src="@drawable/fintechtexture"
                android:scaleType="centerCrop"
                android:alpha="0.6"
                android:adjustViewBounds="false"
                android:maxHeight="120dp"
                android:maxWidth="160dp" />

            <!-- Main content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

        <!-- Bank Icon/Logo Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Bank Icon/Initials -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBankIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/white_20"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!-- Real Icon ImageView -->
                    <ImageView
                        android:id="@+id/ivBankIcon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:visibility="gone" />

                    <!-- Fallback Text Initials -->
                    <TextView
                        android:id="@+id/tvBankInitials"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="SBI"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Bank Name (Top Right) -->
        <TextView
            android:id="@+id/tvBankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SBI"
            android:textColor="@color/white"
                android:textSize="14sp"
            android:textStyle="bold"
            android:alpha="0.9" />
        </LinearLayout>

        <!-- Spending Amount -->
        <TextView
            android:id="@+id/tvSpending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹2,500"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Transaction Count -->
        <TextView
            android:id="@+id/tvTransactionCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 transactions"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:alpha="0.8"
            android:layout_marginTop="4dp" />

        <!-- Add Button (for Cash card only) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddCash"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="+ Add"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:backgroundTint="@color/white_20"
            app:cornerRadius="18dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:paddingHorizontal="16dp" />

    </LinearLayout>
            
        </FrameLayout>

</com.google.android.material.card.MaterialCardView>
