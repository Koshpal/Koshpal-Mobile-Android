<?xml version="1.0" encoding="utf-8"?>
<!-- Item for Top Increases/Decreases -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingVertical="8dp">

    <!-- Category Icon -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:cardBackgroundColor="@color/surface_medium"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/ivCategoryIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_category_default"
            android:layout_gravity="center" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Category Name & Change -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textColor="@color/text_primary"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAmountChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹1,200 more"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Percentage Change Badge -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPercentageBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/expense_light"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <TextView
            android:id="@+id/tvPercentageChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="↑ 22%"
            android:textColor="@color/expense"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
