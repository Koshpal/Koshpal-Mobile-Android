<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- User Greeting Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="20dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/bg_header_gradient">

            <!-- Profile Image with Ring -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="58dp"
                android:layout_height="58dp"
                app:cardCornerRadius="29dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/primary"
                app:strokeWidth="1.5dp"
                app:cardBackgroundColor="@color/white">

                <ImageView
                    android:id="@+id/ivUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person"
                    android:scaleType="centerCrop"
                    android:tint="@color/primary"
                    android:padding="14dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Greeting + Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good Morning ☀️"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Karan Bankar"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Notification Icon -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/primary_lightest"
                app:strokeWidth="1dp"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_notifications"
                    android:tint="@color/primary"
                    android:padding="12dp" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Bank Cards Section (Keep as is - Perfect!) -->


        <!-- Financial Overview - Single Card with Income & Expense -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/layoutFinancialOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:strokeWidth="1dp"
            app:strokeColor="@color/primary"
            app:cardBackgroundColor="@color/white"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="16dp"
                android:background="@drawable/bg_financial_gradient"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle">

                <!-- INCOME SECTION -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E8EDFF">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_trending_up"
                            android:tint="#4267EB"
                            android:padding="12dp" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Income"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvTotalIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="₹0.00"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/balance_positive"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>

                <!-- EXPENSE SECTION -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        app:cardCornerRadius="25dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F5E9FF">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_trending_down"
                            android:tint="#8B4DE4"
                            android:padding="12dp" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Expense"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tvTotalExpenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="₹0.00"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/balance_neutral"
                        android:fontFamily="sans-serif-medium" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_credit_card"
                    android:tint="@color/background_dark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your Banks &amp; Cards"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBankCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="4dp"
                android:clipToPadding="false" />

        </LinearLayout>
        <!-- Action Buttons Row: Add Transaction & Reminders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Add Transaction Button (50% width) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddTransaction"
                style="@style/Button.Koshpal.Primary"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="Add Payment"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:cornerRadius="5dp"
                android:elevation="6dp" />

            <!-- Reminders Button (50% width) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReminders"
                style="@style/Button.Koshpal.Primary"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="Reminders"
                android:textColor="@color/white"
                app:backgroundTint="@color/secondary"
                app:icon="@drawable/ic_notifications"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:cornerRadius="5dp"
                android:elevation="6dp" />

        </LinearLayout>

        <!-- Recent Transactions Section - Single Card with Header and List -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRecentTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Section Header with Gradient Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recent Transactions"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tvViewAllTransactions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_white_background"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textColor="@color/primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/primary"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Recent Transactions List -->

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- No Transactions State - Hyper Modern Design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNoTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_no_transactions"
                android:padding="32dp"
                android:gravity="center">

                <!-- Animated Icon Container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_receipt"
                        android:tint="@color/white"
                        android:background="@drawable/circle_gradient_background"
                        android:padding="20dp" />

                    <!-- Floating Elements -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_trending_up"
                        android:tint="@color/white"
                        android:background="@drawable/circle_white_background"
                        android:padding="4dp"
                        android:layout_marginTop="-12dp"
                        android:layout_marginStart="60dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Transactions Yet"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start by importing your SMS transactions to see your financial activity here"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:alpha="0.9"
                    android:gravity="center"
                    android:layout_marginBottom="28dp" />

                <!-- Modern Import Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnImport"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Import Transactions"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    app:backgroundTint="@color/white"
                    app:icon="@drawable/ic_add"
                    app:iconTint="@color/primary"
                    app:iconSize="20dp"
                    android:paddingHorizontal="32dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Permissions Card - Modern Design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPermissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/warning_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_warning"
                        android:tint="@color/warning"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Permissions Required"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable SMS permissions to automatically track your transactions"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEnablePermissions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable Permissions"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/warning" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- SMS Parser Card - Modern Design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSmsParser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/secondary_lightest">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_message"
                        android:tint="@color/secondary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Import Your Real Transactions"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Automatically parse your actual SMS messages to import real banking transactions from your phone"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnParseSms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Import Real SMS Data"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/secondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTestBudget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Test Budget"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginEnd="2dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCheckBudget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Check Budget"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="2dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTestNotification"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Test Alert"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="2dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#FF5722" />

                </LinearLayout>

                <!-- Comprehensive Test Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTestAllThresholds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🧪 Test All Thresholds and Categories"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#9C27B0" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentTransactions"
            android:layout_width="match_parent"
            android:layout_marginBottom="70dp"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="8dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>