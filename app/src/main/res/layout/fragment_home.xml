<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Shimmer Loading Layout -->
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:shimmer_auto_start="true"
        app:shimmer_base_alpha="0.7"
        app:shimmer_duration="1500"
        app:shimmer_highlight_alpha="0.9"
        app:shimmer_direction="left_to_right"
        app:shimmer_repeat_mode="restart"
        app:shimmer_shape="linear">

        <include layout="@layout/shimmer_home_placeholder" />

    </com.facebook.shimmer.ShimmerFrameLayout>

    <!-- Actual Content Layout -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:visibility="gone"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Modern Financial Overview Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp"
            android:background="@drawable/bg_primary_rounded_bottom"
            android:clipToPadding="false">

            <!-- Greeting Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="24dp"
                android:paddingBottom="20dp">

                <!-- Profile Image -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:cardCornerRadius="26dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:id="@+id/ivUserProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person"
                        android:scaleType="centerCrop"
                        android:tint="@color/primary"
                        android:padding="11dp" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Greeting + Name -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="14dp">

                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good Morning"
                        android:textColor="@color/white"
                        android:alpha="0.85"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tvUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karan"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- Notification Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    app:cardCornerRadius="21dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#33FFFFFF"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_notifications"
                        android:tint="@color/white"
                        android:padding="10dp" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Financial Stats Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutFinancialOverview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Title -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="This Month Overview"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Details"
                            android:textColor="@color/primary"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:padding="4dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>

                    <!-- Income & Expense Cards -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- INCOME CARD -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#E8F5E9"
                            app:strokeColor="#4CAF50"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="18dp">

                                <!-- Icon & Label Row -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        app:cardCornerRadius="18dp"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="#4CAF50">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_trending_up"
                                            android:tint="@color/white"
                                            android:padding="9dp" />
                                    </com.google.android.material.card.MaterialCardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:text="Income"
                                        android:textSize="12sp"
                                        android:textColor="#2E7D32"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <!-- Amount -->
                                <TextView
                                    android:id="@+id/tvTotalIncome"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="14dp"
                                    android:text="₹0.00"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:textColor="#1B5E20"
                                    android:fontFamily="sans-serif-medium" />

                                <!-- Growth Indicator (Optional) -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="↗ +12% from last month"
                                    android:textSize="10sp"
                                    android:textColor="#43A047"
                                    android:alpha="0.8" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- EXPENSE CARD -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFEBEE"
                            app:strokeColor="#F44336"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="18dp">

                                <!-- Icon & Label Row -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <com.google.android.material.card.MaterialCardView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        app:cardCornerRadius="18dp"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="#F44336">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_trending_down"
                                            android:tint="@color/white"
                                            android:padding="9dp" />
                                    </com.google.android.material.card.MaterialCardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:text="Expense"
                                        android:textSize="12sp"
                                        android:textColor="#C62828"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <!-- Amount -->
                                <TextView
                                    android:id="@+id/tvTotalExpenses"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="14dp"
                                    android:text="₹0.00"
                                    android:textSize="22sp"
                                    android:textStyle="bold"
                                    android:textColor="#B71C1C"
                                    android:fontFamily="sans-serif-medium" />

                                <!-- Growth Indicator (Optional) -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="↘ -8% from last month"
                                    android:textSize="10sp"
                                    android:textColor="#E53935"
                                    android:alpha="0.8" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_credit_card"
                    android:tint="@color/background_dark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Your Banks &amp; Cards"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp" />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvBankCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="4dp"
                android:clipToPadding="false" />

        </LinearLayout>
        <!-- Action Buttons Row: Add Transaction & Reminders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Add Transaction Button (50% width) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddTransaction"
                style="@style/Button.Koshpal.Primary"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="Add Payment"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:cornerRadius="5dp"
                android:elevation="6dp" />

            <!-- Reminders Button (50% width) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReminders"
                style="@style/Button.Koshpal.Primary"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="Reminders"
                android:textColor="@color/white"
                app:backgroundTint="@color/secondary"
                app:icon="@drawable/ic_notifications"
                app:iconGravity="textStart"
                app:iconSize="20dp"
                app:iconTint="@color/white"
                app:cornerRadius="5dp"
                android:elevation="6dp" />

        </LinearLayout>

        <!-- Recent Transactions Section - Single Card with Header and List -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRecentTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/primary"
            app:strokeWidth="1dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Section Header with Gradient Background -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recent Transactions"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tvViewAllTransactions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_white_background"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textColor="@color/primary"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/primary"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Recent Transactions List -->

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- No Transactions State - Hyper Modern Design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardNoTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_no_transactions"
                android:padding="32dp"
                android:gravity="center">

                <!-- Animated Icon Container -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_receipt"
                        android:tint="@color/white"
                        android:background="@drawable/circle_gradient_background"
                        android:padding="20dp" />

                    <!-- Floating Elements -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_trending_up"
                        android:tint="@color/white"
                        android:background="@drawable/circle_white_background"
                        android:padding="4dp"
                        android:layout_marginTop="-12dp"
                        android:layout_marginStart="60dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Transactions Yet"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start by importing your SMS transactions to see your financial activity here"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:alpha="0.9"
                    android:gravity="center"
                    android:layout_marginBottom="28dp" />

                <!-- Modern Import Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnImport"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Import Transactions"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="28dp"
                    app:backgroundTint="@color/white"
                    app:icon="@drawable/ic_add"
                    app:iconTint="@color/primary"
                    app:iconSize="20dp"
                    android:paddingHorizontal="32dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Permissions Card - Modern Design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPermissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/warning_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_warning"
                        android:tint="@color/warning"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Permissions Required"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable SMS permissions to automatically track your transactions"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEnablePermissions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable Permissions"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/warning" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- SMS Parser Card - Modern Design -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSmsParser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/secondary_lightest">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_message"
                        android:tint="@color/secondary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Import Your Real Transactions"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Automatically parse your actual SMS messages to import real banking transactions from your phone"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnParseSms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Import Real SMS Data"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/secondary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTestBudget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Test Budget"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginEnd="2dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCheckBudget"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Check Budget"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="2dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="@color/secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnTestNotification"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Test Alert"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="2dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#FF5722" />

                </LinearLayout>

                <!-- Comprehensive Test Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTestAllThresholds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🧪 Test All Thresholds and Categories"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#9C27B0" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Feedback Card -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentTransactions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:padding="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="80dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#37474F"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <!-- Feedback Icon -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFB74D">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="💬"
                        android:textSize="24sp"
                        android:gravity="center" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Feedback Text -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Give feedback"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suggest new features, report problems..."
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:alpha="0.8"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Arrow Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right"
                    android:tint="@color/white"
                    android:alpha="0.6" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>