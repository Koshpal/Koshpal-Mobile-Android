<?xml version="1.0" encoding="utf-8"?>
<!-- Premium Month Comparison Card with Gradient Chart -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/card_padding">

    <!-- Chart Container with Shimmer -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_md">

        <!-- Shimmer for Chart -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerComparisonChart"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="visible"
            app:shimmer_auto_start="true"
            app:shimmer_base_alpha="0.7"
            app:shimmer_direction="left_to_right"
            app:shimmer_duration="1500">

            <include layout="@layout/shimmer_month_comparison" />

        </com.facebook.shimmer.ShimmerFrameLayout>

        <!-- Actual Chart -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartMonthComparison"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Smart Insights Section -->
    <LinearLayout
        android:id="@+id/layoutComparisonInsights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light"
            android:layout_marginVertical="@dimen/spacing_md" />

        <!-- Insights Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Changes"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <!-- Top Increases -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Increases"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="@dimen/spacing_xs" />

        <LinearLayout
            android:id="@+id/layoutTopIncreases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/spacing_md" />

        <!-- Top Decreases -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Decreases"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="@dimen/spacing_xs" />

        <LinearLayout
            android:id="@+id/layoutTopDecreases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</LinearLayout>
