<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.insights.InsightsFragment">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/surface_light"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insights"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_semibold"
            android:letterSpacing="-0.01" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 1. Budget Usage KPI Card -->
            <!-- Card Heading -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_budget_empty"
                    android:tint="@color/primary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:text="Budget Usage"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roboto_semibold"
                    android:textSize="16sp"
                    android:letterSpacing="-0.01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvMonthSelector"
                    android:text="This Month"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="10sp"
                    android:background="@drawable/rounded_background_white_20"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBudgetUsage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface_light"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- KPI Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:text="Total Budget"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tvTotalBudget"
                                android:text="₹0"
                                android:textColor="@color/text_primary"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:text="Spent This Month"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tvSpentThisMonth"
                                android:text="₹0"
                                android:textColor="@color/secondary"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:text="Percent Used"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/tvPercentUsed"
                                android:text="0%"
                                android:textColor="@color/secondary"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Budget Category Progress Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_chart"
                            android:tint="@color/primary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:text="Category-wise Budget Progress"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView
                            android:text="This Month"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:background="@drawable/rounded_background_white_20"
                            android:padding="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <!-- Budget Category Progress List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvBudgetCategories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false"
                        android:minHeight="200dp" />

                    <!-- Removed old donut/sparkline charts; replaced with per-category progress bars -->

                    <!-- Warning badge removed per design -->

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 3. Recurring Payments -->
            <!-- Card Heading -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_subscriptions"
                    android:tint="@color/success"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Recurring Payments"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roboto_semibold"
                    android:textSize="16sp"
                    android:letterSpacing="-0.01" />

                <TextView
                    android:id="@+id/tvRecurringCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 found"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="11sp" />

            </LinearLayout>
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRecurringPayments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface_light"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRecurringPayments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_recurring_payment" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 4. Top Merchant Hotspots -->
            <!-- Card Heading -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_store"
                    android:tint="@color/warning"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:text="Top Merchants"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roboto_semibold"
                    android:textSize="16sp"
                    android:letterSpacing="-0.01"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:text="This Month"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="10sp"
                    android:background="@drawable/rounded_background_white_20"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="@{() -> monthSelector.click()}" />

            </LinearLayout>
            
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMerchantHotspots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/surface_light"
                app:strokeColor="@color/divider"
                app:strokeWidth="1dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Credit Merchants (Money IN) -->
                    <TextView
                        android:text="💰 Money Received From"
                        android:textColor="@color/success"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp" />
                    
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTopCreditMerchants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false" />
                    
                    <!-- Debit Merchants (Money OUT) -->
                    <TextView
                        android:text="💸 Money Spent On"
                        android:textColor="@color/secondary"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp" />
                    
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTopDebitMerchants"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false" />

                    <!-- Category distribution removed per design -->

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
