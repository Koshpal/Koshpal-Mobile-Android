<?xml version="1.0" encoding="utf-8"?>
<!-- Premium Recurring Payment Card with Micro-Interactions -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardRecurring"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_md"
    style="@style/CardView.Premium"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Gradient Avatar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/avatar_size_medium"
                android:layout_height="@dimen/avatar_size_medium"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_gradient_avatar">

                    <TextView
                        android:id="@+id/tvMerchantInitials"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="NF"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="sans-serif-medium" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Merchant Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/spacing_md">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvMerchantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Netflix"
                        android:textColor="@color/text_primary"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Category Tag -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/accent_purple_light"
                        app:cardCornerRadius="@dimen/badge_corner_radius"
                        app:cardElevation="0dp"
                        android:layout_marginStart="@dimen/spacing_sm">

                        <TextView
                            android:id="@+id/tvCategoryTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Streaming"
                            android:textColor="@color/accent_purple"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="3dp" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Frequency & Mini Trend Line -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/spacing_xs">

                    <TextView
                        android:id="@+id/tvFrequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_marginHorizontal="6dp"
                        android:background="@drawable/circle_background" />

                    <TextView
                        android:id="@+id/tvConsecutiveMonths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 months"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <!-- Mini Trend Indicator -->
                    <TextView
                        android:id="@+id/tvTrendIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ˆ"
                        android:textSize="12sp"
                        android:layout_marginStart="@dimen/spacing_xs" />

                </LinearLayout>

            </LinearLayout>

            <!-- Amount & Status Column -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvCurrentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹499"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Animated Status Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardStatusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/accent_green_light"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="@dimen/spacing_xs">

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â†“ 15%"
                        android:textColor="@color/accent_green"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Expand Arrow -->
            <ImageView
                android:id="@+id/ivExpandArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/arrow_down_float"
                android:tint="@color/text_secondary"
                android:layout_marginStart="@dimen/spacing_sm" />

        </LinearLayout>

        <!-- Month Comparison Section -->
        <LinearLayout
            android:id="@+id/layoutMonthComparison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_md"
            android:paddingVertical="@dimen/spacing_sm"
            android:background="@color/accent_blue_light">

            <!-- Previous Month -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="@dimen/spacing_sm">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous Month"
                    android:textColor="@color/text_tertiary"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvPreviousAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹599"
                    android:textColor="@color/text_secondary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="@dimen/spacing_xs" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider_light" />

            <!-- Current Month -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="@dimen/spacing_sm">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Month"
                    android:textColor="@color/text_tertiary"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvCurrentAmountLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹499"
                    android:textColor="@color/text_highlight"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="@dimen/spacing_xs" />

            </LinearLayout>

        </LinearLayout>

        <!-- Expandable Details Section with Spring Animation -->
        <LinearLayout
            android:id="@+id/layoutExpandedDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/spacing_md"
            android:visibility="gone">

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_light"
                android:layout_marginBottom="@dimen/spacing_md" />

            <!-- Recent Transactions Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Transactions"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="@dimen/spacing_sm" />

            <!-- Recent Transactions List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecentTransactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_recent_transaction_mini"
                tools:itemCount="3" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
