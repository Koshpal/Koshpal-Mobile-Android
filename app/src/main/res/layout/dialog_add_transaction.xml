<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0F1419">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:background="#0F1419">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:tint="@color/white"
                app:tint="@color/white" />

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add a transaction"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btnClose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Close"
                android:tint="@color/white"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- Transaction Type Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSpend"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="SPEND"
                android:textColor="@color/white"
            android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                app:icon="@drawable/ic_check_circle"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:cornerRadius="24dp"
                app:backgroundTint="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIncome"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="INCOME"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
                android:letterSpacing="0.1"
                app:cornerRadius="24dp"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp"
                android:backgroundTint="#1A1F2E" />

        </LinearLayout>

        <!-- Amount Input Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1A1F2E"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount spent"
                    android:textColor="#A0AEC0"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                        android:text="â‚¹"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp" />

                    <EditText
                        android:id="@+id/etAmount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Enter amount"
                        android:textColor="@color/white"
                        android:textColorHint="#A0AEC0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:background="@android:color/transparent"
                        android:inputType="numberDecimal"
                        android:padding="0dp"
                        android:minHeight="0dp" />

                    <ImageButton
                        android:id="@+id/btnCalculator"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_arrow_up_right"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Calculator"
                        android:tint="#A0AEC0"
                        app:tint="#A0AEC0" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Date, Time, and Paid To Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1A1F2E"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Date & Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Date &amp; time"
                        android:textColor="#A0AEC0"
                        android:textSize="14sp" />

        <TextView
                        android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                        android:text="Today, 11:38 am"
            android:textColor="@color/white"
            android:textSize="14sp"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#2A3441"
                    android:layout_marginBottom="12dp" />

                <!-- Paid To Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Paid to"
                        android:textColor="#A0AEC0"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/etPaidTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Enter the name or place"
                        android:textColor="@color/white"
                        android:textColorHint="#A0AEC0"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:padding="8dp"
                        android:minWidth="150dp"
                        android:gravity="end" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Account and Expense Toggle Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/primary"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_credit_card"
                    android:tint="@color/white"
                    app:tint="@color/white"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CASH"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_chevron_down"
                    android:tint="@color/white"
                    app:tint="@color/white"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expense"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    app:thumbTint="@color/white"
                    app:trackTint="@color/primary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Category Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1A1F2E"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_star_filled"
                    android:tint="@color/white"
                    app:tint="@color/white"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvCategory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Food &amp; Dining"
                android:textColor="@color/white"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageButton
                    android:id="@+id/btnAddCategory"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_add"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add Category"
                    android:tint="@color/white"
                    app:tint="@color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Notes Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1A1F2E"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_edit"
                        android:tint="@color/white"
                        app:tint="@color/white"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notes"
                        android:textColor="#A0AEC0"
                        android:textSize="14sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/etNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tap to add"
                android:textColor="@color/white"
                    android:textColorHint="#5A6B7F"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:gravity="top|start"
                    android:padding="0dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tags Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1A1F2E"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_tag"
                    android:tint="#A0AEC0"
                    app:tint="#A0AEC0"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvTags"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tags"
                android:textColor="@color/white"
                    android:textSize="14sp"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true" />

                <ImageButton
                    android:id="@+id/btnAddTag"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_add"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Add Tag"
                    android:tint="#A0AEC0"
                    app:tint="#A0AEC0" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Attachment Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="#1A1F2E"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_image"
                        android:tint="#A0AEC0"
                        app:tint="#A0AEC0"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Attachment"
                        android:textColor="#A0AEC0"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/btnAddAttachment"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_add"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Add Attachment"
                        android:tint="#A0AEC0"
                        app:tint="#A0AEC0" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvAttachmentHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo of a receipt/warranty"
                    android:textColor="#5A6B7F"
                    android:textSize="12sp"
                    android:layout_marginStart="36dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bottom Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/btnSaveAndAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save &amp; add another"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:text="SAVE"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                app:icon="@drawable/ic_check_circle"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:cornerRadius="28dp"
                app:backgroundTint="@color/primary"
                android:paddingStart="24dp"
                android:paddingEnd="24dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
