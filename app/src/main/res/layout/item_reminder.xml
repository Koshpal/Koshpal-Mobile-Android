<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardReminder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/white"
    app:strokeWidth="1dp"
    app:strokeColor="#E5E7EB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Left Accent Line -->
        <View
            android:id="@+id/typeIndicator"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:background="@color/error"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Main Content Area -->
        <LinearLayout
            android:id="@+id/contentArea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/typeIndicator"
            app:layout_constraintEnd_toStartOf="@id/actionArea">

            <!-- Header Row: Name + Type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvPersonName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rahul Kumar"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Rahul Kumar" />

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TO PAY"
                    android:textColor="@color/text_secondary"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.05"
                    android:layout_marginStart="8dp"
                    tools:text="TO PAY" />

            </LinearLayout>

            <!-- Amount and Priority Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹500"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/text_primary"
                    android:letterSpacing="-0.01"
                    tools:text="₹500" />

                <!-- Priority Indicator -->
                <View
                    android:id="@+id/priorityDot"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:background="@drawable/circle_shape"
                    android:backgroundTint="#F59E0B"
                    android:layout_marginStart="10dp"
                    android:visibility="visible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tvPriority"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:textColor="#F59E0B"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginStart="4dp"
                    android:visibility="visible"
                    tools:text="High" />

            </LinearLayout>

            <!-- Purpose -->
            <TextView
                android:id="@+id/tvPurpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dinner bill at restaurant"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Dinner bill at restaurant" />

            <!-- Bottom Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <!-- Date/Time -->
                <TextView
                    android:id="@+id/tvDueDateTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="15 Oct • 6:00 PM"
                    android:textColor="@color/text_secondary"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:drawableStart="@drawable/ic_calendar"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/text_secondary"
                    android:gravity="center_vertical"
                    tools:text="15 Oct • 6:00 PM" />

                <!-- Repeat Indicator -->
                <TextView
                    android:id="@+id/tvRepeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly"
                    android:textColor="@color/primary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:visibility="gone"
                    android:layout_marginStart="8dp"
                    tools:visibility="visible"
                    tools:text="Monthly" />

            </LinearLayout>

            <!-- Contact (Compact) -->
            <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 98765 43210"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:drawablePadding="4dp"
                android:drawableTint="@color/text_secondary"
                android:visibility="visible"
                tools:text="+91 98765 43210" />

        </LinearLayout>

        <!-- Right Action Area -->
        <LinearLayout
            android:id="@+id/actionArea"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Complete Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E8F5E9">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnMarkComplete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_check_circle"
                    app:iconTint="@color/success"
                    app:iconSize="18dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeWidth="0dp"
                    app:rippleColor="@color/success"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Edit Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F3F4F6">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="@color/text_secondary"
                    app:iconSize="16dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeWidth="0dp"
                    app:rippleColor="@color/primary"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Delete Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFEBEE">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="@color/error"
                    app:iconSize="18dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeWidth="0dp"
                    app:rippleColor="@color/error"
                    style="@style/Widget.MaterialComponents.Button.TextButton" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Overdue Indicator Strip -->
        <View
            android:id="@+id/layoutOverdue"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/error"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>