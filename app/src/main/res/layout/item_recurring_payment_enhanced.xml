<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced Recurring Payment Item with Material 3 Design -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRecurring"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <!-- Merchant Avatar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/primary_light">

                <TextView
                    android:id="@+id/tvMerchantInitials"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="NF"
                    android:textColor="@color/primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Merchant Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvMerchantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Netflix"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Category Tag -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/info_light"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/tvCategoryTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Streaming"
                            android:textColor="@color/info_dark"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="3dp" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Frequency & Months -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvFrequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="3dp"
                        android:layout_height="3dp"
                        android:layout_marginHorizontal="6dp"
                        android:background="@drawable/circle_background" />

                    <TextView
                        android:id="@+id/tvConsecutiveMonths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 months"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Amount & Status Column -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvCurrentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹499"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Status Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardStatusBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/success_light"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="↓ 15%"
                        android:textColor="@color/success_dark"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="3dp" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Expand Arrow -->
            <ImageView
                android:id="@+id/ivExpandArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/arrow_down_float"
                android:tint="@color/text_secondary"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Month Comparison Section -->
        <LinearLayout
            android:id="@+id/layoutMonthComparison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:paddingVertical="8dp"
            android:background="@color/surface_light">

            <!-- Previous Month -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous Month"
                    android:textColor="@color/text_tertiary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvPreviousAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹599"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/divider_light" />

            <!-- Current Month -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Month"
                    android:textColor="@color/text_tertiary"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvCurrentAmountLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹499"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Expandable Details Section -->
        <LinearLayout
            android:id="@+id/layoutExpandedDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_light"
                android:layout_marginBottom="12dp" />

            <!-- Recent Transactions Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent Transactions"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Recent Transactions List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecentTransactions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
