<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Blue Header Section Shimmer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        android:background="@drawable/bg_primary_rounded_bottom"
        android:clipToPadding="false">

        <!-- Greeting Section Shimmer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="24dp"
            android:paddingBottom="20dp">

            <!-- Profile Image Shimmer -->
            <View
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/shimmer_rounded_corner" />

            <!-- Title Shimmer -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="14dp">

                <View
                    android:layout_width="120dp"
                    android:layout_height="14dp"
                    android:background="@drawable/shimmer_rounded_corner" />

                <View
                    android:layout_width="150dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/shimmer_rounded_corner" />
            </LinearLayout>

            <!-- Search Button Shimmer -->
            <View
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/shimmer_rounded_corner" />

        </LinearLayout>

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="20dp"
            android:background="#33FFFFFF"
            android:alpha="0.5" />

        <!-- Summary Cards Shimmer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginHorizontal="16dp">

            <!-- Income Card Shimmer -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E8E8E8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="12dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/shimmer_rounded_corner" />
                    </LinearLayout>

                    <View
                        android:layout_width="100dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Expense Card Shimmer -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E8E8E8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="12dp"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/shimmer_rounded_corner" />
                    </LinearLayout>

                    <View
                        android:layout_width="100dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Filter Chips Shimmer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp">

        <View
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shimmer_rounded_corner" />

        <View
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shimmer_rounded_corner" />

        <View
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shimmer_rounded_corner" />

        <View
            android:layout_width="110dp"
            android:layout_height="32dp"
            android:background="@drawable/shimmer_rounded_corner" />

    </LinearLayout>

    <!-- Transaction Items Shimmer -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Transaction Item 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <View
                            android:layout_width="140dp"
                            android:layout_height="16dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                        <View
                            android:layout_width="100dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                    </LinearLayout>

                    <View
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Transaction Item 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <View
                            android:layout_width="120dp"
                            android:layout_height="16dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                        <View
                            android:layout_width="90dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                    </LinearLayout>

                    <View
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Transaction Item 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <View
                            android:layout_width="160dp"
                            android:layout_height="16dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                        <View
                            android:layout_width="110dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                    </LinearLayout>

                    <View
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Transaction Item 4 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <View
                            android:layout_width="130dp"
                            android:layout_height="16dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                        <View
                            android:layout_width="95dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                    </LinearLayout>

                    <View
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Transaction Item 5 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <View
                            android:layout_width="145dp"
                            android:layout_height="16dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                        <View
                            android:layout_width="105dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                    </LinearLayout>

                    <View
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Transaction Item 6 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F5F5F5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <View
                            android:layout_width="125dp"
                            android:layout_height="16dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                        <View
                            android:layout_width="85dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/shimmer_rounded_corner" />

                    </LinearLayout>

                    <View
                        android:layout_width="80dp"
                        android:layout_height="16dp"
                        android:background="@drawable/shimmer_rounded_corner" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
