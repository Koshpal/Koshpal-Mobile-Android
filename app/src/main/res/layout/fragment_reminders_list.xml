<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:elevation="4dp"
                android:paddingBottom="16dp">

                <!-- Modern Toolbar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="16dp"
                    android:background="@color/white"
                    android:elevation="2dp">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_arrow_back"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Back"
                        android:tint="@color/primary"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Payment Reminders"
                        android:textAppearance="@style/TextAppearance.Koshpal.Title"
                        android:layout_marginStart="8dp" />

                    <ImageButton
                        android:id="@+id/btnSearch"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_search"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Search"
                        android:tint="@color/primary"
                        android:padding="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Statistics Cards -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="12dp">

                    <!-- Pending Count -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="@color/warning_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvPendingCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5"
                                android:textAppearance="@style/TextAppearance.Koshpal.Display"
                                android:textColor="@color/warning_dark"
                                tools:text="5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textAppearance="@style/TextAppearance.Koshpal.Caption"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Amount to Give -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="3dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="@color/expense_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvToGive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹2.5K"
                                android:textAppearance="@style/TextAppearance.Koshpal.Amount"
                                android:textColor="@color/expense"
                                android:textSize="20sp"
                                tools:text="₹2.5K" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="To Pay"
                                android:textAppearance="@style/TextAppearance.Koshpal.Caption"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Amount to Receive -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="14dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="@color/income_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="14dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvToReceive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹1.2K"
                                android:textAppearance="@style/TextAppearance.Koshpal.Amount"
                                android:textColor="@color/income"
                                android:textSize="20sp"
                                tools:text="₹1.2K" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="To Receive"
                                android:textAppearance="@style/TextAppearance.Koshpal.Caption"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Next Payment Due Card - Modern Design -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNextReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/gradient_financial_overview">

                    <!-- Content Container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Header with Badge -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:src="@drawable/ic_notifications"
                                    android:tint="@color/white"
                                    android:alpha="0.95" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Next Payment"
                                    android:textAppearance="@style/TextAppearance.Koshpal.Subtitle"
                                    android:textColor="@color/white"
                                    android:alpha="0.95"
                                    android:layout_marginStart="10dp" />

                            </LinearLayout>

                            <!-- Type Badge -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="16dp"
                                app:cardElevation="0dp"
                                app:cardBackgroundColor="@color/white">

                                <TextView
                                    android:id="@+id/chipNextType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="💸 To Pay"
                                    android:textColor="@color/expense"
                                    android:textAppearance="@style/TextAppearance.Koshpal.Caption"
                                    android:textStyle="bold"
                                    android:paddingHorizontal="16dp"
                                    android:paddingVertical="6dp"
                                    tools:text="💸 To Pay" />

                            </com.google.android.material.card.MaterialCardView>

                        </LinearLayout>

                        <!-- Person Name -->
                        <TextView
                            android:id="@+id/tvNextPersonName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rahul Kumar"
                            android:textColor="@color/white"
                            android:textSize="26sp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:letterSpacing="-0.01"
                            android:layout_marginBottom="8dp"
                            tools:text="Rahul Kumar" />

                        <!-- Amount - Large and Bold -->
                        <TextView
                            android:id="@+id/tvNextAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹500"
                            android:textColor="@color/white"
                            android:textSize="42sp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"
                            android:letterSpacing="-0.02"
                            android:layout_marginBottom="12dp"
                            tools:text="₹500" />

                        <!-- Purpose -->
                        <TextView
                            android:id="@+id/tvNextPurpose"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dinner bill payment"
                            android:textColor="@color/white"
                            android:textAppearance="@style/TextAppearance.Koshpal.Body"
                            android:alpha="0.92"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:layout_marginBottom="20dp"
                            tools:text="Dinner bill payment" />

                        <!-- Date/Time and Action Button -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Date/Time Container -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_calendar"
                                    android:tint="@color/white"
                                    android:alpha="0.9" />

                                <TextView
                                    android:id="@+id/tvNextDueDateTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Today at 6:00 PM"
                                    android:textColor="@color/white"
                                    android:textAppearance="@style/TextAppearance.Koshpal.Body"
                                    android:textStyle="bold"
                                    android:alpha="0.95"
                                    android:layout_marginStart="8dp"
                                    tools:text="Today • 6:00 PM" />

                            </LinearLayout>

                            <!-- Mark Paid Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnMarkNextComplete"
                                style="@style/Button.Koshpal.Primary"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:text="Mark Paid"
                                android:textColor="@color/primary"
                                app:backgroundTint="@color/white"
                                app:cornerRadius="22dp"
                                android:paddingHorizontal="20dp"
                                app:elevation="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- No Next Reminder State -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardNoNextReminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_check_circle"
                        android:tint="@color/success"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Caught Up!"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No pending reminders right now"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:gravity="center" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Reminders"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />

            <!-- Reminders List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReminders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_reminder"
                tools:itemCount="3" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layoutEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone"
                tools:visibility="gone">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_notifications"
                    android:tint="@color/text_secondary"
                    android:alpha="0.5"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Reminders Yet"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap the + button to create your first reminder"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add"
        android:contentDescription="Add Reminder"
        app:tint="@color/white"
        app:backgroundTint="@color/secondary"
        app:elevation="8dp"
        app:borderWidth="0dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
