<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Modern Bottom Navigation Style -->
    <style name="ModernBottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@drawable/bottom_nav_wave_background</item>
        <item name="itemIconTint">@color/bottom_nav_modern_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_modern_text_color</item>
        <item name="itemIconSize">26dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>
    
    <!-- NumberPicker Style for Month Picker -->
    <style name="NumberPickerStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="colorControlNormal">@color/primary</item>
    </style>
    
    <!-- ========== Typography Styles (Roboto) ========== -->
    
    <!-- Display Text -->
    <style name="TextAppearance.Koshpal.Display" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Title Text -->
    <style name="TextAppearance.Koshpal.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Subtitle Text -->
    <style name="TextAppearance.Koshpal.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Body Text -->
    <style name="TextAppearance.Koshpal.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Body Secondary -->
    <style name="TextAppearance.Koshpal.BodySecondary" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Caption Text -->
    <style name="TextAppearance.Koshpal.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Button Text -->
    <style name="TextAppearance.Koshpal.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Amount Text (Large Bold) -->
    <style name="TextAppearance.Koshpal.Amount" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- ========== Card Styles ========== -->
    
    <!-- Standard Card -->
    <style name="Card.Koshpal" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="contentPadding">16dp</item>
    </style>
    
    <!-- Elevated Card -->
    <style name="Card.Koshpal.Elevated">
        <item name="cardElevation">8dp</item>
    </style>
    
    <!-- Flat Card -->
    <style name="Card.Koshpal.Flat">
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/divider</item>
    </style>
    
    <!-- ========== Button Styles ========== -->
    
    <!-- Primary Button -->
    <style name="Button.Koshpal.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.Koshpal.Button</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="elevation">2dp</item>
    </style>
    
    <!-- Secondary Button -->
    <style name="Button.Koshpal.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAppearance">@style/TextAppearance.Koshpal.Button</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="strokeWidth">2dp</item>
    </style>
    
    <!-- Text Button -->
    <style name="Button.Koshpal.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.Koshpal.Button</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
    
    <!-- Success Button -->
    <style name="Button.Koshpal.Success" parent="Button.Koshpal.Primary">
        <item name="backgroundTint">@color/success</item>
    </style>
    
    <!-- Error Button -->
    <style name="Button.Koshpal.Error" parent="Button.Koshpal.Primary">
        <item name="backgroundTint">@color/error</item>
    </style>
    
    <!-- ========== Chip Styles ========== -->
    
    <!-- Choice Chip -->
    <style name="Chip.Koshpal.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/background_light</item>
        <item name="chipStrokeColor">@color/border_light</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Koshpal.Body</item>
        <item name="chipMinHeight">40dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
    
    <!-- ========== Input Field Styles ========== -->
    
    <!-- Outlined Input -->
    <style name="TextInputLayout.Koshpal" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextAppearance">@style/TextAppearance.Koshpal.Caption</item>
        <item name="android:textAppearance">@style/TextAppearance.Koshpal.Body</item>
    </style>
    
</resources>
