<?xml version="1.0" encoding="utf-8"?>
<!-- Premium Fintech Styles -->
<resources>
    
    <!-- Typography Hierarchy -->
    <style name="TextAppearance.Insights.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>
    
    <style name="TextAppearance.Insights.SectionTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Insights.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.Insights.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <style name="TextAppearance.Insights.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Premium Card Styles -->
    <style name="CardView.Premium" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="strokeWidth">0dp</item>
    </style>
    
    <style name="CardView.Premium.Subcard" parent="CardView.Premium">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
    </style>
    
    <style name="CardView.Premium.Glassmorphism" parent="CardView.Premium">
        <item name="cardBackgroundColor">@color/glass_background</item>
        <item name="strokeColor">@color/glass_border</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
    </style>
    
    <!-- Chips and Buttons -->
    <style name="Chip.Premium" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">20dp</item>
        <item name="chipBackgroundColor">@color/accent_blue_light</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="Button.Premium.Filled" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">24dp</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="backgroundTint">@color/gradient_primary_start</item>
    </style>
    
    <!-- Progress Bar -->
    <style name="ProgressBar.Premium" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackCornerRadius">8dp</item>
        <item name="trackThickness">12dp</item>
        <item name="indicatorColor">@color/gradient_primary_start</item>
        <item name="trackColor">@color/accent_blue_light</item>
    </style>
    
</resources>
